<section {{bind-attr class=":item active"}}>
  <header>
    <h1 class="title">Item</h1>
    {{#link-to 'items'}}<i class="fa fa-list-ul"></i><span class="link-text">Items</span>{{/link-to}}
    {{#link-to 'item.edit'}}<i class="fa fa-pencil"></i><span class="link-text">Edit</span>{{/link-to}}
  </header>

  <section class="item-metadata metadata-container">
    <section class="metadata">
      <h1 class="title">{{title}}</h1>
      <p class="description">{{description}}</p>

      <ul class="default-meta-list">
        <li class="rating">
          <label>Rating</label>
          <div class="meta-value">{{rating}}</div>
        </li>
        <li class="priority">
          <label>Priority</label>
          <div class="meta-value">{{priority}}</div>
        </li>
        <li class="complete">
          <label>Completed</label>
          <div class="meta-value">
            {{input type="checkbox" class="checkmark" disabled="disabled" checked=complete}}
          </div>
        </li>
      </ul>
    </section>

    {{#if fields}}
    <section class="fields metadata">
      <h1>Custom Fields</h1>

      <ul class="fields-list">
        {{#each fields}}
        <li class="item-field">
          <label>
            <span>{{dedasherize key}}</span>
          </label>

          {{#view 'field' field=this classNames="field-value"}}
            {{#if view.isString}}
              {{val}}
            {{/if}}
            {{#if view.isNumber}}
              {{val}}
            {{/if}}
            {{#if view.isBoolean}}
              {{input type="checkbox" class="checkmark field-checkbox" checked=val disabled="disabled"}}
            {{/if}}
            {{#if view.isDate}}
              {{moment-calendar val}}
            {{/if}}
          {{/view}}
        </li>
        {{/each}}
      </ul>
    </section>
    {{/if}}
  </section>
</section>
