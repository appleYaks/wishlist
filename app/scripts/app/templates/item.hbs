<div class="item">
  <div class="actions">
    {{#link-to 'items'}}Close{{/link-to}}
    {{#link-to 'item.edit' this}}Edit{{/link-to}}
  </div>

  <div class="item-metadata">
    <p class="title">{{title}}</p>
    <p class="rating">{{rating}}</p>
    <p class="date">{{date}}</p>
    <p class="priority">{{priority}}</p>
    <p class="complete">{{complete}}</p>
  </div>

  <ul class="fields">
    {{#each fields}}
    <li class="item-field">{{key}} : {{val}}</li>
    {{/each}}
  </ul>
</div>
