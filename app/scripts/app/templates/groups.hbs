<section class="groups sortable active">
  <header>
    <h1 class="title">Groups</h1>
    <span class="dummy"></span>
    {{#link-to 'groups.new'}}<i class="fa fa-plus"></i><span class="link-text">Add</span>{{/link-to}}
  </header>

  <ul class="list groups-list">
  {{#each}}
    <li>
      {{#link-to 'items' id class='list-item'}}
        {{title}}
      {{/link-to}}
      <div class="controls">
        {{#link-to 'group' this}}<button><i class="fa fa-info-circle"></i></button>{{/link-to}}
        {{#link-to 'group.edit' this}}<button><i class="fa fa-pencil"></i></button>{{/link-to}}
        <button {{action 'delete' this}}><i class="fa fa-trash"></i></button>
      </div>
    </li>
  {{/each}}
  </ul>

  <footer {{bind-attr class=userSorted}}>
    <button class="clearSort" {{action 'clearSort' 'groups'}}><i class="fa fa-square-o"></i>Unsort</button>
    <button class="title" {{action 'sortByTitle'}}><i {{bind-attr class=":fa sortedTitleAsc:fa-sort-alpha-desc:fa-sort-alpha-asc"}}></i>Title</button>
  </footer>
</section>
