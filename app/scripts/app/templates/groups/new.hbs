<section {{bind-attr class=":group-new active"}}>
  <header>
    <h1 class="title">Create Group</h1>
    <button class="icon" {{action 'cancel'}}><i class="fa fa-close"></i><span class="button-text">Cancel</span></button>
    <button class="icon" {{action 'save'}}><i class="fa fa-floppy-o"></i><span class="button-text">Save</span></button>
  </header>

  <section class="group-new-metadata metadata-container">
    {{edit-metadata title=title description=description fields=fields validationErrors=validationErrors}}
  </section>
</section>
